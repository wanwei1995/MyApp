<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.activity.SeekBarActivity">

    <SeekBar android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:progressDrawable="@drawable/sb_bar"
             android:thumb="@drawable/sb_thumb"
             android:id="@+id/seekBar"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:id="@+id/txt_cur"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16dp"
              android:textColor="@color/bar_font"
              android:text="@string/msg_seekbar_use"/>

    <RatingBar
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:numStars="2"
            android:layout_height="wrap_content"/>


    <RatingBar
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:numStars="2"
            android:rating="1.5"
            android:layout_height="wrap_content"/>

    <RatingBar
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:numStars="3"
            android:layout_height="wrap_content"/>

    <RatingBar
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:progressDrawable="@drawable/rate_bar"
            android:minHeight="32dip"
            android:maxHeight="32dip"
            android:rating="2"
            android:numStars="6"
            android:layout_height="wrap_content"/>


    <TextView android:layout_marginTop="10dp"
              android:layout_width="wrap_content"
              android:textSize="16dp"
              android:layout_height="wrap_content"
              android:textColor="@color/bar_font"
              android:text="@string/msg_ratingBar_use"/>

</LinearLayout>