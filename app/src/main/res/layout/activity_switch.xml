<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.activity.SwitchActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <ToggleButton
                android:id="@+id/tbtn_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOff="关闭声音"
                android:textOn="打开声音"/>

        <ToggleButton
                android:disabledAlpha="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOff="关闭声音"
                android:textOn="打开声音"/>

        <ToggleButton
                android:disabledAlpha="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOff="关闭声音"
                android:textOn="打开声音"/>

        <ToggleButton
                android:disabledAlpha="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOff="关闭声音"
                android:textOn="打开声音"/>

    </LinearLayout>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/bar_font"
              android:text="@string/msg_toggleButton_use"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp">

        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
        />

        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:thumb="@drawable/switch_custom_thumb_selector"
        />

        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:track="@drawable/switch_custom_track_selector"
        />

        <Switch
                android:id="@+id/swh_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:thumb="@drawable/switch_custom_thumb_selector"
                android:track="@drawable/switch_custom_track_selector"
        />
    </LinearLayout>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/bar_font"
              android:text="@string/msg_switch_use"/>


</LinearLayout>